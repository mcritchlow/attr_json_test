<%= simple_form_for(@agent) do |f| %>
  <%= f.input :label %><br>
  <%= f.input :alternateLabel %><br>
  <%= f.input :orcid %><br>
  <%= f.input :note %><br>
  <%= f.input :identifier %><br>
  <%= f.select :type, Agent.types.map {|r| [r.humanize, r.camelcase]}, disabled: @type != "Agent" %>

  <%= f.button :submit %>
<% end %>
